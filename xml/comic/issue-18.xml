        <charList id="kovar">Leonid Kovar (Starfire)</charList>
        <charList id="blanc">Andre Le Blanc</charList>
        <charList id="kflash">Wallace (Wally) West (Kid Flash)</charList>
        <charList id="aqua">Aqualad</charList>
